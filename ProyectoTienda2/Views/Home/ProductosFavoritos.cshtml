@model List<InfoProducto>

<div style="margin: 0 auto; text-align: center">
    <h1 class="display-4">FAVORITOS</h1>

    @if (Context.Session.GetObject<List<int>>("FAVORITOS") == null)
    {
        <h1 style="color:red" class="display-3">
            Todavia no has agregado favoritos
        </h1>    
    }

    @if(Model != null)
    {
        <div class="p-4 sm:ml-64">
            <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700">
                <div class="text-center p-4">
                    @foreach (InfoProducto item in Model)
                    {
                        <div style="margin-top: 100px;">
                            <div class="relative p-4 border-2 border-gray-900 rounded-lg dark:border-gray-700">
                    
                                <h1 class="absolute top-0 left-0 px-4 py-2 bg-white text-gray-900 dark:text-white dark:bg-gray-900 dark:border-gray-700 rounded-lg shadow">@item.Nick</h1>

                                <a href="#" style="margin: 0 auto; margin-top: 35px" class="flex items-center justify-center h-48 mb-4 rounded bg-white border border-gray-200 rounded-lg shadow md:flex-row hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
                                    <img class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-l-lg" src="@item.Imagen" alt="">
                                    <div class="flex flex-col justify-between p-4 leading-normal">
                                        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">@item.Titulo</h5>
                                        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">Here are the biggest enterprise technology acquisitions of 2021 so far, in reverse chronological order. Here are the biggest enterprise technology acquisitions of 2021 so far, in reverse chronological order.</p>
                                        <p class="font-medium text-2xl text-gray-900 dark:text-gray-400">Precio: @item.Precio €</p>
                                    </div>
                                </a>

                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    
</div>

